<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<%= search_form_for @q do |f| %>

<h3>Search Records</h3>

  <%= f.search_field :firstName_or_lastName_or_location_cont, class: "form-control col-3" %>
  
  <%= f.submit "Search", class: "btn btn-info mt-4" %>
  
<% end %>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th scope="col"><%= sort_link(@q, :firstName) %></th>
      <th scope="col"><%= sort_link(@q, :lastName) %></th>
      <th scope="col"><%= sort_link(@q, :location) %></th>
      <th scope="col"><%= sort_link(@q, :workHours) %></th>
      <th scope="col"><%= sort_link(@q, :entitlement) %></th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.firstName %></td>
        <td><%= employee.lastName %></td>
        <td><%= employee.location %></td>
        <td><%= employee.workHours %></td>
        <td><%= employee.entitlement %></td>
        <td><%= link_to 'Show', employee, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-outline-info" %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Employee', new_employee_path, class: "btn btn-info" %>


