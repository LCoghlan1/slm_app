<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <h3 class="card-title">Employee Records</h3>
    <hr>
    <div class="row">
    <div class="col">
    <p class="card-text">
    
      <%= search_form_for @q do |f| %>
  
      <%= f.search_field :firstName_or_lastName_or_location_cont, class: "form-control col-6", placeholder: "Search Records" %>
    
      <br>
    
      <%= f.submit "Search", class: "btn btn-info mr-4" %>
      
      <%= link_to 'Add Employee', new_employee_path, class: "btn btn-outline-info" %>
    
      <% end %>
      </p>
      
      </div>
    <div class="col">
      <p class="card-text">
        hello
      
      </p>
    </div>
    </div>
    
  </div>
</div>

<br>


<div class="card">
  <table class="table table-striped mt-4">
    <thead>

      <tr>
        <th scope="col"><%= sort_link(@q, :id, 'SLM ID') %></th>
        <th scope="col"><%= sort_link(@q, :firstName, 'First Name') %></th>
        <th scope="col"><%= sort_link(@q, :lastName, 'Last Name') %></th>
        <th scope="col"><%= sort_link(@q, :location, 'Location') %></th>
        <th scope="col"><%= sort_link(@q, :workHours, 'Working Hours') %></th>
        <th scope="col"><%= sort_link(@q, :entitlement, 'Entitlement') %></th>
        <th colspan="3"><strong>Actions</strong></th>
      </tr>
    </thead>
  
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.firstName %></td>
          <td><%= employee.lastName %></td>
          <td><%= employee.location %></td>
          <td><%= employee.workHours %></td>
          <td><%= employee.entitlement %></td>
          <td><%= link_to 'Show', employee, class: "btn btn-info" %></td>
          <td><%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<br>




