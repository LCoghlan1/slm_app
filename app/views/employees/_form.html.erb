
<div class="row">
  <div class="col-9">
    
    <%= render 'shared/errors', obj: @employee %>
    
    <%= form_with(model: employee) do |form| %>

    
      <div class="form-group col-md-6">
        <%= form.label :firstName, "First Name" %>
        <%= form.text_field :firstName, class: 'form-control' %>
      </div>
    
      <div class="form-group col-md-6">
        <%= form.label :lastName, "Last Name" %>
        <%= form.text_field :lastName, class: 'form-control' %>
      </div>
    
      <div class="form-group col-md-6">
        <%= form.label :location %>
        <%= form.text_field :location, class: 'form-control' %>
      </div>
    
      <div class="form-group col-md-6">
        <%= form.label :entitlement %>
        <%= form.text_field :entitlement, class: 'form-control' %>
      </div>
    
      <div class="form-group col-md-6">
        <%= form.label :workHours, "Working Hours per Week" %>
        <%= form.text_field :workHours, class: 'form-control' %>
      </div>
    
      <div class="form-group col-md-6">
        <%= form.submit %>
      </div>
      
      <div class="col-md-6">
        <%= link_to t('.back'), :back, class: "btn btn-outline-secondary mt-4 mb-4" %>
      </div>
    <% end %>
  </div>
</div>