<div class="card">
  <table class="table table-striped mt-4">
        <div class="p-3 mb-2 bg-info text-white mb-4"><h5>User List</h5></div>
    <thead>

      <tr>
        <th scope="col">User ID</th>
        <th scope="col">First Name</th>
        <th scope="col">Second Name</th>
        <th colspan="3"><strong>Actions</strong></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstName %></td>
          <td><%= user.lastName %></td>
          <td><%# link_to 'Show', user, class: "btn btn-info" %></td>
          <td><%= link_to "Edit your profile", edit_user_registration_path(user), class: "btn btn-outline-info" %></td>
          <td><%# link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>