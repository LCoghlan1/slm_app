<% if current_user.admin == true %>
<div class="card">
  <table class="table table-striped mt-4">
    <thead>

      <tr>
        <th scope="col"><%= sort_link(@q, :id, 'User ID') %></th>
        <th scope="col"><%= sort_link(@q, :firstName, 'First Name') %></th>
        <th scope="col"><%= sort_link(@q, :lastName, 'Last Name') %></th>
        <th scope="col"><%= sort_link(@q, :email, 'Email') %></th>
        <th colspan="3"><strong>Actions</strong></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.firstName %></td>
          <td><%= user.lastName %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
<%= link_to 'Add User', new_user_registration_path, class: "btn btn-secondary" %>
<% end %>
