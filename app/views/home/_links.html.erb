<div class="row">
  <div class="col-4">
    <div class="card mb-3 box-shadow" id="home-card">
      <div class="card-header">
        <h5 class="card-title"><center>Employees</center></h5>
      </div>
      <div class="card-body d-flex flex-column">
        <p>Number of Employees: <%= @employees.count %></p>
        <p>Number of Locations: <%= @employees.distinct.count(:location) %></p>
        <p>List of Locations:</p>
        <ul>
          <% @employees.distinct(:location).pluck(:location).each do |emp| %>
          <li><%= emp %></li>
          <% end %>
        </ul>
        <div class="mt-auto">
          <%= link_to 'Go to Employee List', employees_path, class: "align-self-end btn btn-lg btn-block btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="card mb-3 box-shadow" id="home-card">
      <div class="card-header">
        <h5 class="card-title"><center>Absence Reports</center></h5>
      </div>
      <div class="card-body d-flex flex-column">
        <p>Overview of all absences recorded:</p>
        <p>Total Absences: <%= @absences.count %></p>
        <p>Total Days Absent: <%= @absences.sum(:full_pay) + @absences.sum(:half_pay) %></p>
        <p>Click below to display reports for a defined period</p>
        <div class="mt-auto">
          <%= link_to 'Go to Absence Report', absences_path, class: "btn btn-lg btn-block btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-4">
    <div class="card mb-3" id="home-card">
      <div class="card-header">
        <h5 class="card-title"><center>Documentation</center></h5>
      </div>
      <div class="card-body card-body d-flex flex-column">
        <p>List of documentation</p>
        <ul>
          <li>Sick Leave Policy</li>
        </ul>
        <div class="mt-auto">
          <%= link_to 'Go to Documentation', documents_path, class: "btn btn-lg btn-block btn-outline-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>