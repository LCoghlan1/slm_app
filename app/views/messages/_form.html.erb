<div class="row">
  <div class="col-9">
    
    <%= render 'shared/errors', obj: @message %>
    
    <%= form_with(model: message) do |form| %>

      <div class="form-group col-md-6">
        <%= form.label :title %>
        <%= form.text_field :title, autofocus: true, autocomplete: 'title', class: 'form-control' %>
      </div>

      <div class="form-group col-md-6">
          <%= form.label :body %>
          <%= form.text_area :body, autofocus: true, autocomplete: 'title', class: 'form-control' %>
      </div>
  
      <div class="form-group col-md-6">
        <%= form.submit %>
      </div>
      
      <div class="col-md-6">
        <%= link_to t('.back'), :back, class: "btn btn-outline-secondary mt-4 mb-4" %>
      </div>
    <% end %>

  </div>
</div>
