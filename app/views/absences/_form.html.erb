
<div class="row">
  <div class="col-9">
    
    <%= render 'shared/errors', obj: @absence %>
    
    <%= form_with(model: @absence, url: [@employee, @absence]) do |form| %>
  
      <div class="form-row">
        <div class="form-group col-md-4">
          <%= form.label :date, "Start Date" %><br>
          <%= form.date_field :date, class: 'form-control input-sm', 'datepicker' => true %>
        </div>
        <div class="form-group col-md-4">
          <%= form.label :end_date %><br>
          <%= form.date_field :end_date, class: 'form-control input-sm', 'datepicker' => true %>
        </div>
      </div>
      <br>
      <div class="form-row">
        <div class="form-group col-md-2">
          <%= form.label "Instance Number" %>
          <%= form.text_field :instance_no, autofocus: true, autocomplete: 'instance number', class: 'form-control' %>
        </div>
        <div class="form-group col-md-2">
          <%= form.label :full_pay %>
          <%= form.text_field :full_pay, autofocus: true, autocomplete: 'days at full pay', class: 'form-control' %>
        </div>
        <div class="form-group col-md-2">
          <%= form.label :half_pay %>
          <%= form.text_field :half_pay, autofocus: true, autocomplete: 'days at half pay', class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="form-row">
        <div class="form-group col-md-12">
          <%= form.label :description %>
          <%= form.text_area :description, autofocus: true, autocomplete: 'description', class: 'form-control' %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <%= form.file_field :image %>
      </div>
      <% if @absence.image? %>
        <div class="field"> 
          <%= form.check_box :remove_image %>
          Remove Image
        </div>
      <% end %>
      
      <div class="field">
        <%= form.hidden_field :employee_id %>
      </div>
      <br>
      <div class="form-group">
        <%= form.submit %>
      </div>
      
      <div class="col-md-6">
        <%= link_to t('.back'), :back, class: "btn btn-outline-secondary mt-4 mb-4" %>
      </div>
      
    <% end %>
    
  </div>
</div>





